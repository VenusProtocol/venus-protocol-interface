import { get{{name}}Contract } from '@venusprotocol/web3';
import { useMemo } from 'react';

import { useProvider, useSigner } from 'libs/wallet';
import { ChainId } from 'types';

export const useGet{{name}}Contract = ({
  passSigner = false,
  address,
  chainId,
}: {
  passSigner: boolean;
  address: string;
  chainId?: ChainId;
}) => {
  const { provider } = useProvider({ chainId });
  const { signer } = useSigner({ chainId });
  const signerOrProvider = passSigner ? signer : provider;

  return useMemo(
    () =>
      signerOrProvider
        ? get{{name}}Contract({
            signerOrProvider,
            address,
          })
        : undefined,
    [signerOrProvider, address],
  );
};
